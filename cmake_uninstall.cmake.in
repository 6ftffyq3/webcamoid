cmake_minimum_required(VERSION 3.16)

project(Uninstaller)

include(libAvKys/cmake/ProjectCommons.cmake)

if (NOT EXISTS "@CMAKE_BINARY_DIR@/install_manifest.txt")
    message(FATAL_ERROR "Cannot find install manifest: @CMAKE_BINARY_DIR@/install_manifest.txt")
endif()

file(READ "@CMAKE_BINARY_DIR@/install_manifest.txt" files)
string(REGEX REPLACE "\n" ";" files "${files}")

foreach (file ${files})
    message(STATUS "Uninstalling ${CMAKE_INSTALL_PREFIX}/${file}")

    if(IS_SYMLINK "${CMAKE_INSTALL_PREFIX}/${file}" OR EXISTS "${CMAKE_INSTALL_PREFIX}/${file}")
        exec_program("@CMAKE_COMMAND@" ARGS "-E rm -r \"${CMAKE_INSTALL_PREFIX}/${file}\""
                     OUTPUT_VARIABLE RM_OUT
                     RETURN_VALUE RM_RETVAL)

        if (NOT "${RM_RETVAL}" STREQUAL 0)
            message(FATAL_ERROR "Problem when removing ${CMAKE_INSTALL_PREFIX}/${file}")
        endif ()
    else (IS_SYMLINK "${CMAKE_INSTALL_PREFIX}/${file}" OR EXISTS "${CMAKE_INSTALL_PREFIX}/${file}")
        message(STATUS "File ${CMAKE_INSTALL_PREFIX}/${file} does not exist.")
    endif ()
endforeach ()

# remove any empty directories if DESTDIR is set
if (NOT "${CMAKE_INSTALL_PREFIX}" STREQUAL "" AND EXISTS "${CMAKE_INSTALL_PREFIX}")
    exec_program("@CMAKE_COMMAND@" ARGS "-E rm -r \"${CMAKE_INSTALL_PREFIX}\"")
endif ()
